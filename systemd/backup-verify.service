[Unit]
Description=Verify backup integrity (light check)
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=/opt/backup-venv/bin/backup verify
Nice=15
IOSchedulingClass=idle

# Security hardening
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/var/lib/backup
NoNewPrivileges=true
